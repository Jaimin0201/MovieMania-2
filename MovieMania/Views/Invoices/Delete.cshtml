@model MovieMania.Models.Invoice

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Invoice </h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Payment Method:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>

        <dt>
            Subscription date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubscriptionDate)
        </dd>

        <dt>
            Ending date:
