@model MovieMania.Models.Serie

@{
    ViewBag.Title = "Create";
}

<h2>Create Series</h2>


@using (Html.BeginForm("Create", "Series", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Serie</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2"><b>Serie title:</b> </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SerieTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SerieTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Description:</b> </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SerieDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SerieDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cover, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextBoxFor(m => m.Cover, new { type = "file" })
                @Html.ValidationMessageFor(m => m.Cover)

            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><b>Seasons:</b> </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SeasonsNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SeasonsNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
